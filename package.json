    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.47",
    "concurrently": "^8.2.2",
    "esbuild": "^0.19.11",
    "glob": "^10.3.10",
    "typescript": "^5.3.3"
  },
  "files": [
    "dist/**/*",
    "src/**/*"
  ]
}
