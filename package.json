{
  "name": "@devcapsule/readapt",
  "version": "0.0.3dev",
  "description": "React with adaptive style",
  "keywords": [
    "react",
    "component",
    "css"
  ],
  "author": "Nitipit Nontasuwan",
  "license": "ISC",
  "main": "dist/readapt.js",
  "scripts": {
    "test": "node esbuild/test.mjs",
